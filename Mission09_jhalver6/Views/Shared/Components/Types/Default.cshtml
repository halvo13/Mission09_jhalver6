@{
}
@model IEnumerable<string>
<div class="d-grid bg-secondary text-bg-primary bg-opacity-25 grid">
    <a asp-controller="Home" asp-action="Index" asp-route-BookCategory="" asp-route-pageNum="1" class="btn btn-outline-secondary">Home</a>

    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-BookCategory="@t" asp-route-pageNum="1" class="btn @(ViewBag.SelectedType == t ? "btn-primary" : "btn-outline-secondary")">@t</a>
    }
</div>